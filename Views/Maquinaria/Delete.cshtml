@model ProyectoJardineria.Models.Maquinaria

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar maquinaria</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Maquinaria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdInventario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdInventario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoMaquinaria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoMaquinaria)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HorasUsoActuales)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HorasUsoActuales)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HorasUsoMaxDia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HorasUsoMaxDia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HorasUsoMantenimiento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HorasUsoMantenimiento)
        </dd>
    </dl>

    <div>
        <form asp-action="Delete" method="post">
            <!-- Enviar la cédula del empleado para eliminarlo -->
            <input type="hidden" name="IdInventario" value="@Model.IdInventario" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>

</div>
